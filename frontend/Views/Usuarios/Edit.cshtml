@model frontend.Models.Usuarios

@{
    ViewData["Title"] = "Editar Usuario";
}

<h2>Editar Usuario</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label for="Gmail">Correo Electrónico</label>
        <input type="email" class="form-control" asp-for="Gmail" required />
    </div>
    <div class="form-group">
        <label for="Contrasena">Contraseña</label>
        <input type="password" class="form-control" asp-for="Contrasena" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar Cambios</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
