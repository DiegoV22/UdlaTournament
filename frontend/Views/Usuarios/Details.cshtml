@model frontend.Models.Usuarios

@{
    ViewData["Title"] = "Detalles del Usuario";
}

<body style="background-image: url('/images/fondoUsuario.png'); background-size: cover; background-repeat: no-repeat; background-position: center; margin: 0; padding: 0; font-family: Arial, sans-serif; height: 100vh; display: flex; flex-direction: column;">

    <!-- Contenedor centrado -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; margin-top: 90px;">
        <div style="background-color: #1e201d; padding: 20px; border-radius: 10px; width: 100%; max-width: 500px; color: white;">
            <h2 style="text-align: center;">Detalles del Usuario</h2>

            <div style="margin-top: 20px; text-align: center;">
                <h4>Usuario</h4>
                <hr style="border: 1px solid #444; margin-bottom: 20px;" />
                <dl style="display: inline-block; text-align: center; margin-top: 20px;">
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">ID</dt>
                        <dd style="margin: 0 auto;">@Model.Id</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">Gmail</dt>
                        <dd style="margin: 0 auto;">@Model.Gmail</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">Contraseña</dt>
                        <dd style="margin: 0 auto;">@Model.Contrasena</dd>
                    </div>
                </dl>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a asp-action="Index" class="btn btn-secondary"
                   style="background-color: #28a745; color: white; border: none; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                    Volver
                </a>
            </div>
        </div>
    </div>
</body>
