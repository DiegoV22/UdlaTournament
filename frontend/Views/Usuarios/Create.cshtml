@model frontend.Models.Usuarios

@{
    ViewData["Title"] = "Crear Usuario";
}

<body style="background-image: url('/images/fondoUsuario.png'); background-size: cover; background-repeat: no-repeat; background-position: center; margin: 0; padding: 0; font-family: Arial, sans-serif; height: 100vh; display: flex; flex-direction: column;">

    <!-- Contenedor del formulario centrado -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; margin-top: 90px;">
        <div style="background-color: #1e201d; padding: 20px; border-radius: 10px; width: 100%; max-width: 400px; color: white;">
            <h2 style="text-align: center;">Crear Usuario</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <form asp-action="Create" method="post">
                <!-- Campo para Correo Electrónico -->
                <div class="form-group">
                    <label for="Gmail">Correo Electrónico</label>
                    <input type="email" class="form-control" id="Gmail" name="Gmail" required />
                </div>

                <!-- Campo para Contraseña -->
                <div class="form-group">
                    <label for="Contrasena">Contraseña</label>
                    <input type="password" class="form-control" id="Contrasena" name="Contrasena" required />
                </div>

                <!-- Botones de acción -->
                <button type="submit" class="btn btn-primary mt-3" style="background-color: #7fff6b; border-color: #7fff6b; color: black; display: block; margin: 20px auto 0 auto; width: 80%; height: 50px; font-size: 16px;">Guardar</button>
                <a asp-action="Index" class="btn btn-danger mt-3" style="display: block; margin: 20px auto 0 auto; width: 80%; height: 50px; font-size: 16px;">Cancelar</a>
            </form>
        </div>
    </div>
</body>
