@model frontend.Models.Equipos

@{
    ViewData["Title"] = "Crear Equipo";
}

<body style="background-image: url('/images/fondoEquipo.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center; margin: 0; padding: 0; font-family: Arial, sans-serif; height: 100vh; display: flex; flex-direction: column;">

    <!-- Contenedor del formulario centrado -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; margin-top: 90px;">
        <div style="background-color: #1e201d; padding: 20px; border-radius: 10px; width: 100%; max-width: 400px; color: white;">
            <h2 style="text-align: center;">Crear Equipo</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <form asp-action="Create" method="post">
                <!-- Campo para Nombre del Equipo -->
                <div class="form-group">
                    <label for="NombreEquipo">Nombre del Equipo</label>
                    <input type="text" class="form-control" asp-for="NombreEquipo" required />
                </div>

                <!-- Campo para ID del Torneo -->
                <div class="form-group">
                    <label for="TorneoId">ID del Torneo</label>
                    <input type="number" class="form-control" asp-for="TorneoId" required />
                </div>

                <!-- Botón para Guardar -->
                <button type="submit" class="btn btn-primary"
                        style="margin-top: 20px; background-color: #7fff6b; border-color: #7fff6b; color: black;
                               display: block; margin: 20px auto 0 auto; width: 80%; height: 50px; font-size: 16px;">
                    Guardar
                </button>

                <!-- Botón para Cancelar (Color Rojo) -->
                <a asp-action="Index" class="btn btn-secondary"
                   style="display: block; margin: 10px auto; width: 80%; height: 50px; font-size: 16px; background-color: #e74c3c; color: white; text-align: center; padding: 15px 0; border-radius: 5px;">
                    Cancelar
                </a>
            </form>
        </div>
    </div>
</body>
