@model frontend.Models.Equipos

@{
    ViewData["Title"] = "Crear Equipo";
}

<h2>Crear Equipo</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label for="NombreEquipo">Nombre del Equipo</label>
        <input type="text" class="form-control" asp-for="NombreEquipo" required />
    </div>
    <div class="form-group">
        <label for="TorneoId">ID del Torneo</label>
        <input type="number" class="form-control" asp-for="TorneoId" required />
    </div>
    <button type="submit" class="btn btn-primary mt-3">Guardar</button>
    <a asp-action="Index" class="btn btn-secondary mt-3">Cancelar</a>
</form>
