@model frontend.Models.Equipos

@{
    ViewData["Title"] = "Eliminar Equipo";
}

<h2>Eliminar Equipo</h2>

<h3>¿Estás seguro de que deseas eliminar este equipo?</h3>

<div>
    <h4>@Model.NombreEquipo</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.NombreEquipo</dd>

        <dt class="col-sm-2">ID del Torneo</dt>
        <dd class="col-sm-10">@Model.TorneoId</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
