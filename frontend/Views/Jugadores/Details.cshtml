@model frontend.Models.Jugadores

@{
    ViewData["Title"] = "Detalles del Jugador";
}

<h2>Detalles del Jugador</h2>

<div>
    <h4>@Model.Nombre @Model.Apellido</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Cédula</dt>
        <dd class="col-sm-10">@Model.Cedula</dd>

        <dt class="col-sm-2"># Camiseta</dt>
        <dd class="col-sm-10">@Model.NumCamiseta</dd>

        <dt class="col-sm-2">Lateralidad</dt>
        <dd class="col-sm-10">@Model.Lateralidad</dd>

        <dt class="col-sm-2">ID del Equipo</dt>
        <dd class="col-sm-10">@Model.EquipoId</dd>
    </dl>
</div>

<p>
    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
</p>
