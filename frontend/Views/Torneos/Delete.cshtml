@model frontend.Models.Torneos

@{
    ViewData["Title"] = "Eliminar Torneo";
}

<h2>Eliminar Torneo</h2>

<h3>¿Estás seguro de que deseas eliminar este torneo?</h3>

<div>
    <h4>@Model.NombreTorneo</h4>
    <dl class="row">
        <dt class="col-sm-2">ID</dt>
        <dd class="col-sm-10">@Model.Id</dd>

        <dt class="col-sm-2">Nombre</dt>
        <dd class="col-sm-10">@Model.NombreTorneo</dd>

        <dt class="col-sm-2">Fecha de Inicio</dt>
        <dd class="col-sm-10">@Model.FechaInicio.ToString("yyyy-MM-dd")</dd>

        <dt class="col-sm-2">Fecha de Fin</dt>
        <dd class="col-sm-10">@Model.FechaFin.ToString("yyyy-MM-dd")</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Eliminar</button>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</form>
