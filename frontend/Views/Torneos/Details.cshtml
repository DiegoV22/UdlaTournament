@model frontend.Models.Torneos

@{
    ViewData["Title"] = "Detalles del Torneo";
}

<body style="background-image: url('/images/fondoTorneo.jpg'); background-size: cover; background-repeat: no-repeat; background-position: center; margin: 0; padding: 0; font-family: Arial, sans-serif; height: 100vh; display: flex; flex-direction: column;">

    <!-- Contenedor centrado -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; margin-top: 90px;">
        <div style="background-color: #1e201d; padding: 20px; border-radius: 10px; width: 100%; max-width: 500px; color: white;">
            <h2 style="text-align: center;">Detalles del Torneo</h2>

            <div style="margin-top: 20px; text-align: center;">
                <h4>@Model.NombreTorneo</h4>
                <dl style="display: inline-block; text-align: center; margin-top: 20px;">
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">ID</dt>
                        <dd style="margin: 0 auto;">@Model.Id</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">Nombre</dt>
                        <dd style="margin: 0 auto;">@Model.NombreTorneo</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">Fecha de Inicio</dt>
                        <dd style="margin: 0 auto;">@Model.FechaInicio.ToString("yyyy-MM-dd")</dd>
                    </div>
                    <div style="margin-bottom: 10px;">
                        <dt style="font-weight: bold; margin-bottom: 5px;">Fecha de Fin</dt>
                        <dd style="margin: 0 auto;">@Model.FechaFin.ToString("yyyy-MM-dd")</dd>
                    </div>
                </dl>
            </div>

            <div style="text-align: center; margin-top: 20px;">
                <a asp-action="Index" class="btn btn-secondary"
                   style="background-color: #28a745; color: white; border: none; padding: 10px 20px; border-radius: 5px; text-decoration: none;">
                    Volver a la Lista
                </a>
            </div>
        </div>
    </div>
</body>
