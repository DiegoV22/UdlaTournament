@{
    ViewData["Title"] = "Iniciar Sesión";
}

<body style="background-image: url('/images/fondoSesion.png'); background-size: cover; background-repeat: no-repeat; background-position: center; margin: 0; padding: 0; font-family: Arial, sans-serif; height: 100vh; display: flex; flex-direction: column;">

    <!-- Contenedor del formulario centrado -->
    <div style="flex: 1; display: flex; justify-content: center; align-items: center; margin-top: 90px;">
        <div style="background-color: #1e201d; padding: 20px; border-radius: 10px; width: 100%; max-width: 400px; color: white;">
            <h2 style="text-align: center;">Bienvenido a Udla Tournament</h2>

            @if (TempData["Error"] != null)
            {
                <div class="alert alert-danger">@TempData["Error"]</div>
            }

            @if (TempData["Mensaje"] != null)
            {
                <div class="alert alert-success">@TempData["Mensaje"]</div>
            }

            <form asp-action="Login" method="post">
                <div class="form-group">
                    <label for="Gmail">Ingresa Tu Correo Electrónico:</label>
                    <input type="email" class="form-control" id="Gmail" name="Gmail" required />
                </div>
                <div class="form-group">
                    <label for="Contrasena" style="margin-top: 20px;">Ingresa Tu Contraseña:</label>
                    <input type="password" class="form-control" id="Contrasena" name="Contrasena" required />
                </div>
                <button type="submit" class="btn btn-primary"
                        style="margin-top: 20px; background-color: #7fff6b; border-color: #7fff6b; color: black;
                               display: block; margin: 20px auto 0 auto; width: 80%; height: 50px; font-size: 16px;">
                    Iniciar Sesión
                </button>
            </form>
        </div>
    </div>
</body>
